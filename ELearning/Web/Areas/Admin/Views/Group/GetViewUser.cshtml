@{
    ViewBag.Title = "Danh sách sinh viên";
}

@section scripts{
    <script src="~/assets/libs/list.pagination.js/list.pagination.min.js"></script>

    <script src="~/AdminJs/group.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-notify/bootstrap-notify.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/toastr.min.js"></script>
}


<div x-data="groups">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0" x-text="groupName"></h4>
                </div>
                <!-- end card header -->
                <div class="card-body">
                    <div id="customerList">
                        <div class="row g-4 mb-3">
                            <div class="col-sm-auto">
                                <div>
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                            data-bs-target="#modal-add-user">
                                        <i class="ri-add-line align-bottom me-1"></i> 
                                        Thêm sinh viên
                                    </button>
                                    
                                    <button type="button" class="btn btn-primary">
                                        <i class="ri-file-3-fill align-bottom me-1"></i>
                                        Xuất danh sách lớp
                                    </button>

                                    <button type="button" class="btn btn-primary"
                                            x-on:click="ExportExcelResultGroup()">
                                        <i class="ri-file-3-fill align-bottom me-1"></i>
                                        Xuất bảng điểm
                                    </button>
                                </div>
                            </div>

                            <div class="col-sm">
                                <div class="d-flex justify-content-sm-end">
                                    <div class="search-box ms-2">
                                        <input type="text" class="form-control search"
                                               placeholder="Search...">
                                        <i class="ri-search-line search-icon"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive table-card mt-3 mb-1">
                            <table class="table align-middle table-nowrap" id="customerTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>STT</th>
                                        <th>MSSV</th>      
                                        <th>Họ tên</th>
                                        <th>Giới tính</th>
                                        <th>Ngày sinh</th>
                                        <th>Hoạt động</th>
                                    </tr>
                                </thead>

                                <tbody class="list form-check-all">
                                    <template x-for="item in _listUser">
                                        <tr>
                                            <th class="stt" x-text="item.rowIndex"></th>

                                            <td class="id" style="display:none;">
                                                <a class="fw-medium link-primary" x-text="item.id"></a>
                                            </td>

                                            <td class="id_student" x-text="item.mssv"></td>
                                            <td class="email">
                                                <div class="d-flex flex-column">
                                                    <strong class="text-primary" x-text="item.fullName"></strong>
                                                    <p x-text="item.email"></p>
                                                </div>
                                            </td>
                                            <td class="gender" x-text="item.gender"></td>
                                            <td class="date" x-text="new Date(item.birthday).toLocaleDateString('en-GB')"></td>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <div class="edit">
                                                        <a class="btn btn-sm fs-15"
                                                                x-on:click="">
                                                            <i class="las la-lock"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    </template>
                                </tbody>
                            </table>

                             <template x-if="_listUser.length == 0">
                                <div class="noresult">
                                    <div class="text-center">
                                        <lord-icon src="https://cdn.lordicon.com/msoeawqm.json"
                                                   trigger="loop" colors="primary:#121331,secondary:#08a88a"
                                                   style="width:75px;height:75px"></lord-icon>
                                        <h5 class="mt-2">Xin lỗi! không tìm thấy</h5>
                                        <p class="text-muted mb-0">
                                            hãy nhập lại tên mà bạn muốn tìm kiếm
                                        </p>
                                    </div>
                                </div>
                             </template>


                        </div>

                    </div>
                </div><!-- end card -->
            </div>
            <!-- end col -->
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->

    <partial name="_modalAddUserToGroup" />
    <partial name="_offcanvasNoty" />
</div>
