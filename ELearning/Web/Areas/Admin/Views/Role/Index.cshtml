@model IEnumerable<Web.Areas.Admin.ViewModels.Role.RoleListItemVM>


 @{
    ViewBag.Title = "Nhóm quyền";
	var row = 0;
}



@if (User.IsInPermission(AuthConst.AppRole.CREATE))
{
	<div class="my-2">
		<a asp-action="Create" class="btn btn-primary">
			<i class="fas fa-plus-circle"></i> &nbsp; Thêm mới vai trò
		</a>
	</div>
}

<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="table-responsive">
				<table class="table table-bordered table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>Tên quyền</th>
							<th>Mô tả</th>
							<th>Ngày tạo</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							row++;
							<tr>
								<td class="fit">@row</td>
								<td>@Html.DisplayFor(modelItem => item.Name)</td>
								<td>@Html.DisplayFor(modelItem => item.Desc)</td>
								<td class="fit">@item.CreatedDate.ToDMYHM()</td>
								<td class="fit">
									@if (item.Id != Web.WebConfig.AppConst.ROLE_CUSTOMER_ID)
									{
										@if (User.IsInPermission(AuthConst.AppRole.UPDATE))
										{
											<a asp-action="Edit" asp-route-id="@item.Id"
											   class="btn btn-outline-secondary btn-sm"><i class="las la-pen"></i></a>
										}
										@if (User.IsInPermission(AuthConst.AppRole.DELETE))
										{
											<a asp-action="Delete" asp-route-id="@item.Id"
											   class="btn btn-outline-secondary btn-sm"><i class="las la-trash"></i></a>
										}
									}
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>


        </div>
	</div>

</div>


