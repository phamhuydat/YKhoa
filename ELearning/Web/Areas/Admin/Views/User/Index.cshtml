@{
    ViewBag.Title = "Danh sách người dùng";
}

@section scripts {
    <script src="~/assets/libs/list.pagination.js/list.pagination.min.js"></script>
    <script src="~/AdminJs/users.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-notify/bootstrap-notify.min.js"></script>
}


<div x-data="users">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div id="customerList">
                        <div class="row g-4 mb-3">
                            <div class="col-sm-auto">
                                <div>
                                    <button type="button" class="btn btn-primary add-btn"
                                            x-on:click="OpenModelAdd()">
                                        <i class="ri-add-line align-bottom me-1"></i> Thêm người dùng
                                    </button>
                                    <button class="btn btn-soft-danger"
                                            onClick="deleteMultiple()">
                                        <i class="ri-delete-bin-2-line"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="col-sm">
                                <div class="d-flex justify-content-sm-end">
                                    <div class="search-box ms-2">
                                        <input type="text" class="form-control search" 
                                            placeholder="Tìm kiếm..." id="searchInput" x-model="searchTerm">
                                        <i class="ri-search-line search-icon"></i>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="table-responsive table-card mt-3 mb-1">
                            <table class="table align-middle table-nowrap" id="customerTable">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col" style="width: 50px;">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox"
                                                       id="checkAll" value="option">
                                            </div>
                                        </th>
                                        <th>MSSV</th>
                                        <th>Họ tên</th>
                                        <th>Giới tính</th>
                                        <th>Ngày sinh</th>
                                        <th>Nhóm quyền</th>
                                        <th>Trạng thái</th>
                                        <th>Hoạt động</th>
                                    </tr>
                                </thead>
                                <tbody class="list form-check-all">
                                    <template x-for="item in paginatedList">
                                        <tr>
                                            <th scope="row">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                           name="chk_child" value="option1">
                                                </div>
                                            </th>
                                            <td class="id" style="display:none;">
                                                <a class="fw-medium link-primary" x-text="item.id"></a>
                                            </td>
                                            <td class="id_student" x-text="item.mssv"></td>
                                            <td class="email">
                                                <div class="d-flex flex-column">
                                                    <strong class="text-primary" x-text="item.fullName"></strong>
                                                    <p x-text="item.email"></p>
                                                </div>
                                            </td>
                                            <td class="gender" x-text="item.gender"></td>
                                            <td class="date" x-text="new Date(item.birthday).toLocaleDateString('en-GB')"></td>
                                            <td class="roleName" x-text="item.roleName"></td>
                                            <template x-if="!CheckIsBlock(item.blockedTo)">
                                                <td class="status">
                                                    <span class="badge badge-soft-primary text-uppercase">Active</span>
                                                </td>
                                            </template>

                                            <template x-if="CheckIsBlock(item.blockedTo)">
                                                <td class="status">
                                                    <span class="badge badge-soft-danger text-uppercase">Block</span>
                                                </td>
                                            </template>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <div class="edit">
                                                        <a class="btn btn-sm edit-item-btn link-primary fs-15"
                                                           x-on:click="openModalUpdate(item.mssv)">
                                                            <i class="ri-edit-2-line"></i>
                                                        </a>
                                                    </div>
                                                    <div class="remove">
                                                        <a class="btn btn-sm remove-item-btn link-danger fs-15"
                                                           data-bs-toggle="modal" data-bs-target="#deleteRecordModal">
                                                            <i class="ri-delete-bin-line"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    </template>
                                </tbody>
                            </table>

                            <template x-if="paginatedList.length == 0">
                                <div class="noresult">
                                    <div class="text-center">
                                        <lord-icon src="https://cdn.lordicon.com/msoeawqm.json"
                                                   trigger="loop" colors="primary:#121331,secondary:#08a88a"
                                                   style="width:75px;height:75px"></lord-icon>
                                        <h5 class="mt-2">Xin lỗi! không tìm thấy</h5>
                                        <p class="text-muted mb-0">
                                            hãy nhập lại tên mà bạn muốn tìm kiếm
                                        </p>
                                    </div>
                                </div>
                            </template>
                        </div>
                         
                        <template x-if="paginatedList.length != 0">

                            <!-- Pagination controls -->
                            <div class="d-flex justify-content-end mt-3">
                                <nav>
                                    <ul class="pagination">
                                        <li class="page-item" :class="{ 'disabled': currentPage === 1 }">
                                            <a class="page-link" href="#" @@click.prevent="prevPage">
                                                <i class="mdi mdi-chevron-left"></i>
                                            </a>
                                        </li>
                                        <template x-for="page in totalPages">
                                            <li class="page-item" :class="{ 'active': currentPage === page }">
                                                <a class="page-link" href="#" @@click.prevent="goToPage(page)" x-text="page"></a>
                                            </li>
                                        </template>
                                        <li class="page-item" :class="{ 'disabled': currentPage === totalPages }">
                                            <a class="page-link" href="#" @@click.prevent="nextPage">
                                                <i class="mdi mdi-chevron-right"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>

                        </template>

                    </div>
                </div><!-- end card -->
            </div>
            <!-- end col -->
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->

    <partial name="_modalUpdin" model="null" />

    <partial name="_modalDelete" />

</div>