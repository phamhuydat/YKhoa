<div class="modal fade bs-example-modal-lg" id="showModal" tabindex="-1" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content card">
            <div class="modal-header p-3 d-flex">
                <ul class="nav nav-tabs nav-tabs-custom nav-primary" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active" id="btabs-static-home-tab" x-on:click="activeTab='#btabs-static-home'">
                            Thêm thủ công
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="btabs-static-profile-tab" x-on:click="activeTab = '#btabs-static-profile'">
                            Thêm từ file
                        </button>
                    </li>
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close" id="close-modal"></button>
            </div>

            <!--thêm một người dùng-->
           <div class="modal-body block-content tab-content">
                <form class="tab-pane active form-add-user fade" id="btabs-static-home" :class="{ 'show active': activeTab === '#btabs-static-home' }">
                    <div>
                        <div class="mb-4">
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">Mã sinh viên</label>
                                    <input type="text" class="form-control form-control-alt"
                                           id="mssv" name="mssv" x-model="_updinData.mSSV"
                                           placeholder="Nhập mã sinh viên" >
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Họ và tên</label>
                                    <input type="text" class="form-control form-control-alt" x-model="_updinData.fullName"
                                           id="user_name" name="user_name"
                                           placeholder="Nhập họ và tên">
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control form-control-alt" x-model="_updinData.email" id="user_email" name="user_email"
                                           placeholder="Nhập địa chỉ email"
                                          >

                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Số điện thoại</label>
                                    <input type="text" class="form-control form-control-alt" x-model="_updinData.phone" id="user_phone" name="user_phone"
                                           placeholder="Nhập số điện thoại" name="user_phone">
                                </div>

                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="row">
                                <div class="col-md-6" >
                                    <label class="form-label">Nhóm quyền</label>
                                    <select id="roleSelect" x-model="_updinData.appRoleId" class="form-control bs-autocomplete">
                                        <vc:list-role :seleteted-id="_updinData.appRoleId"></vc:list-role>
                                    </select>

                                </div>

                                <div class="col-md-6">
                                    <label class="form-label"> Ngày sinh</label>
                                    <input type="text" class="form-control flatpickr-input" id="datepicker" name="user_ngaysinh"
                                           x-model="_updinData.birthday" data-provider="flatpickr"
                                           data-altFormat="F j, Y"  placeholder="Ngày sinh">
                                   
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-4 d-flex gap-4">
                            <label class="form-label">Giới tính</label>
                            <div class="space-x-2">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="gender-male" x-model="_updinData.gender"
                                           value="Nam" name="user_gender">
                                    <label class="form-check-label" for="gender-male">Nam</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="gender-female" x-model="_updinData.gender"
                                           value="Nu" name="user_gender">
                                    <label class="form-check-label" for="gender-female">Nữ</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control form-control-alt" x-model="_updinData.password"
                                   id="user_password" name="user_password" placeholder="Nhập mật khẩu" >
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div class="hstack gap-2 justify-content-end">
                            <button type="button" class="btn btn-light"
                                    data-bs-dismiss="modal">
                                Dóng        
                            </button>
                            <button type="button" class="btn btn-primary"
                                x-text="_modalSetting.primaryButtonText" @@click="saveCategory()"></button>
                        </div>
                    </div>
                </form>

                <!--thêm nhiều người dùng-->
                <div class="tab-pane fade" id="btabs-static-profile" role="tabpanel" :class="{ 'show active': activeTab === '#btabs-static-profile' }">
                    <form id="form-upload" method="POST" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label for="user_password" class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control form-control-alt" name="user_password"
                                   id="ps_user_group" placeholder="Nhập mật khẩu cho sinh viên!">
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="js-ckeditor">Nội dung</label>
                            <input class="form-control" type="file" id="file-cau-hoi" accept=".xlsx, .xls, .csv"
                                   required>
                        </div>
                        <div class="mb-4">
                            <em>
                                Vui lòng soạn người dùng theo đúng định dạng.
                                <a class="text-primary" href="~/template/file_import_ds_nguoi_dung.xlsx">
                                    Tải về file mẫu
                                    Excel
                                </a>
                            </em>
                        </div>

                        <div class="mb-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-hero btn-primary" id="nhap-file">
                                <i class="fa fa-cloud-arrow-up"></i> Thêm vào hệ thống
                            </button>
                        </div>
                    </form>
                </div>
           </div>
        </div>
    </div>
</div>
